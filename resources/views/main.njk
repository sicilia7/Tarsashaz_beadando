{% extends 'master' %}

{% block content %}

<h2>Bejegyzések</h2>

{% if old('error') %}
<div class="alert alert-danger" role="alert">
{{ old('error') }}
</div>
{% endif %}

<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Szűrés
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <li><a href="../messages/">Minden bejegyzés</a></li>
    <li><a href="../messages/own">Saját bejegyzések</a></li>
    <li><a href="../messages/commented">Kommentált bejegyzések</a></li>
    <li><a href="../messages/statement">Közlemények</a></li>
  </ul>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Érvényesség</th>
      <th>Beküldő</th>
      <th>Cím</th>
    </tr>
  </thead>
   <tbody>
    {% for statement in statements %}
        <tr>
          <td>{{statement.deadline}}</td>
          <td>{{statement.user_id}}</td>
          <td><a href="../statement/{{ statement.id }}">{{statement.title}}</a></td>
          </tr>
  {% endfor %}
  {% for message in messages %}
    {% if message.status == true %}
        <tr>
          <td>"Aktív"</td>
          <td>{{ message.user_id }}</td>
          <td><a href="../message/{{ message.id }}">{{message.title}}</a></td>
          </tr>
      {% endif %}
  {% endfor %}
  {% for message in messages %}
  {% if message.status == false %}
        <tr>
          <td>"Megoldott"</td>
          <td>{{ message.user_id }}</td>
          <td><a href="../message/{{ message.id }}">{{message.title}}</a></td>
          </tr>
      {% endif %}
  {% endfor %}
  </tbody>
</table>

