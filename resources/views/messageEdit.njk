{% extends 'master' %}

{% block content %}
<p>
    <h2>Bejegyzés módosítása</h2>
</p>

{% if old('errors') %}
<div class="alert alert-danger" role="alert">
    <ul>
    {% for error in old('errors') %}
    <li>{{ error.message }}</li>
    {% endfor %}
    </ul>
</div>
{% endif %}

<form class="form-horizontal" action="/message/{{ message.id }}/edit" method="POST">
  {{ csrfField }}
   <div class="form-group">
    <label for="state" class="col-sm-2 control-label">Állapot</label>
    <div class="col-sm-8">
  <input type="checkbox" id="state" class="toggle" data-toggle="toggle" data-on="Aktív" data-off="Lezárt">
      </div>
  </div>
  <div class="form-group">
    <label for="inputUpdates" class="col-sm-2 control-label">Frissítés:</label>
    <div class="col-sm-10">
      <textarea class="form-control" id="inputUpdates" name="textUpdate" rows=10 placeholder="(Az eredeti bejegyzés végéhez kerül hozzáfűzésre)"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-success">Mentés</button>
      <a class="btn btn-default" href="/message/{{ message.id }}" role="button">Vissza</a>
    </div>
  </div>
</form>

{% endblock %}